<header id="site-header" class="site-header sticky top-0 z-50 bg-base-100 scrolled:shadow-lg">
  <div class="container mx-auto">
    <div class="navbar px-4">
      <div class="flex-1">
        <div class="flex-none lg:hidden -ml-4">
          <label for="mobile-drawer" class="btn btn-square btn-ghost pl-0 hover:bg-transparent">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
          </label>
        </div> 
        <a href="/" class="btn btn-ghost normal-case text-2xl font-shadows-light hover:bg-transparent pl-0">NomadBeans</a>
        <div class="form-control hidden lg:block">
          <input type="text" placeholder="Search" class="input input-bordered"/>
        </div>
      </div>
      <div class="flex-none">
        {% include "partials/navigation.html.twig" %}
        <div class="ml-2">
          {% if not grav.user.username %}
            {% if not grav.user.authenticated %}
              <a href="/submit" class="btn btn-primary btn-sm">
                Submit a Cafe
              </a>
            {% endif %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</header>
