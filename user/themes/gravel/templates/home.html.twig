{% set body_classes_slot = "template-home" %}
{% extends 'partials/base.html.twig' %}

{% block hero %}
	<div class="hero h-[32rem] max-h-screen" style="background-image: url(https://images.unsplash.com/photo-1600093463592-8e36ae95ef56?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2370&q=80);">
		<div class="hero-overlay bg-opacity-60"></div>
		<div class="hero-content text-center text-base-100">
			<div class="max-w-lg">
				<h1 class="mb-5 text-3xl sm:text-5xl font-bold sm:leading-[3.5rem]"><div>Fueling</div> Digital Nomads</h1>
				<p class="mb-5 font-shadows-light">Spaces & fuel for digital workers on the road.</p>
				<div class="form-control mt-12">
					<div class="input-group mx-auto w-max">
						<select class="select select-bordered border-l-rounded border-r-0 text-base-300">
							<option disabled selected>Pick category</option>
							<option>T-shirts</option>
							<option>Mugs</option>
						</select>
						<input type="text" placeholder="Searchâ€¦" class="input input-bordered border-l-0 outline-primary font-semibold text-base-300"/>
						<button class="btn btn-square">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block content %}
	{# Category grid #}
	<section class="container mx-auto my-20" data-section="category-grid">
		<div class="px-4">
			<header class="pt-4 relative before:content-[''] before:h-1 before:bg-accent before:w-16 before:absolute before:top-0 before:left-0">
				<h2 class="mb-1">Most Popular Categories</h2>
				<div class="text-gray-400">
					Find great places to stay, eat, shop, or visit the city
				</div>
			</header>

			<ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-12">
				{% set k = 6 %}
				{% for i in range(1, k) %}
					<li class="relative bg-cover rounded-md bg-center overflow-hidden pt-[100%]">
						<a href="#" class="absolute top-0 bottom-0 left-0 right-0">
              <img class="absolute top-0 bottom-0 left-0 right-0 hover:scale-110 transition-transform duration-300 hover:rotate-2" src="https://placeimg.com/600/600/arch" alt="arch">
							<footer class="flex absolute bottom-0 text-white pl-4 pb-4">
								<div class="p-2 mr-4 bg-accent rounded-md">
                  <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor" class="bi bi-calendar2-week-fill" viewBox="0 0 16 16">
                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zm9.954 3H2.545c-.3 0-.545.224-.545.5v1c0 .276.244.5.545.5h10.91c.3 0 .545-.224.545-.5v-1c0-.276-.244-.5-.546-.5zM8.5 7a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1zm3 0a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1zM3 10.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5zm3.5-.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1z"/>
                  </svg>
								</div>
								<div class="flex flex-col justify-center">
									<h3 class="font-normal text-lg">
										Seating
									</h3>
									<div>
										7 Listings
									</div>
								</div>
							</footer>
						</a>
					</li>
				{% endfor %}
			</ul>

		</div>
	</section>

	<div class="container mx-auto my-12">
		<div class="prose px-4 max-w-max">
			{{ page.content|raw }}
		</div>
	</div>
{% endblock %}
